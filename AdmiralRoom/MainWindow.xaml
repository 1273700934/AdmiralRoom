<ribbon:RibbonWindow x:Class="Huoyaoyuan.AdmiralRoom.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Huoyaoyuan.AdmiralRoom"
        xmlns:ribbon="urn:fluent-ribbon"
        mc:Ignorable="d"
        FontFamily="DengXian"
        FontSize="15"
        Title="提督の部屋" MinWidth="{Binding MinWidth, ElementName=GameHost}">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <ribbon:Ribbon Grid.ColumnSpan="2">
            <ribbon:Ribbon.Menu>
                <ribbon:Backstage Header="提督の部屋" KeyTip="T">
                    <ribbon:BackstageTabControl>
                        <ribbon:BackstageTabItem Header="关于">
                            
                        </ribbon:BackstageTabItem>
                    </ribbon:BackstageTabControl>
                </ribbon:Backstage>
            </ribbon:Ribbon.Menu>
            <ribbon:RibbonTabItem Header="舰队" KeyTip="F">

            </ribbon:RibbonTabItem>
            <ribbon:RibbonTabItem Header="浏览" KeyTip="B">
                <ribbon:RibbonGroupBox Header="浏览器">
                    <ribbon:Button Header="后退" KeyTip="B" x:Name="BrowserBack" IsEnabled="{Binding Browser.CanGoBack, ElementName=GameHost, Mode=OneWay}"/>
                    <ribbon:Button Header="前进" KeyTip="F" x:Name="BrowserForward" IsEnabled="{Binding Browser.CanGoForward, ElementName=GameHost, Mode=OneWay}"/>
                    <TextBox x:Name="BrowserAddr" Width="720"/>
                    <ribbon:Button Header="转到" KeyTip="G" x:Name="BrowserGoto"/>
                    <ribbon:Button Header="刷新" KeyTip="R" x:Name="BrowserRefresh"/>
                    <ribbon:Button Header="回到游戏" KeyTip="H" x:Name="BrowserBackToGame"/>
                </ribbon:RibbonGroupBox>
            </ribbon:RibbonTabItem>
        </ribbon:Ribbon>
        <local:KanColleBrowser Grid.Row="1" x:Name="GameHost"/>
        <local:MainContent Grid.Column="1" Grid.Row="1" Grid.RowSpan="2"/>
        <local:DownContent Grid.Row="2"/>
        <ribbon:StatusBar Grid.Row="3" Grid.ColumnSpan="2" FontFamily="DengXian" FontSize="18">
            <ribbon:StatusBarItem HorizontalAlignment="Left">就绪</ribbon:StatusBarItem>
            <Separator HorizontalAlignment="Left"/>
        </ribbon:StatusBar>
    </Grid>
</ribbon:RibbonWindow>
