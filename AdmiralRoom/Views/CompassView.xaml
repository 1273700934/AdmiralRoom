<UserControl x:Class="Huoyaoyuan.AdmiralRoom.Views.CompassView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Huoyaoyuan.AdmiralRoom.Views"
             xmlns:officer="clr-namespace:Huoyaoyuan.AdmiralRoom.Officer"
             mc:Ignorable="d"
             d:DataContext="{d:DesignInstance officer:Staff}"
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <TabControl Background="Transparent" SelectedIndex="1">
            <TabControl.Template>
                <ControlTemplate TargetType="{x:Type TabControl}">
                    <Grid Background="{TemplateBinding Background}">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <TabPanel IsItemsHost="True"/>
                        <ContentPresenter ContentSource="SelectedContent" Grid.Row="1"
                                          x:Name="PART_SelectedContentHost"/>
                    </Grid>
                </ControlTemplate>
            </TabControl.Template>
            <TabControl.Resources>
                <Style TargetType="{x:Type TabItem}">
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="{x:Type TabItem}">
                                <Grid>
                                    <Rectangle x:Name="bd"
                                               Fill="{TemplateBinding Background}"
                                               Cursor="Hand"
                                               Opacity="0.1"/>
                                    <TextBlock Text="{TemplateBinding Header}"
                                               VerticalAlignment="Center"
                                               HorizontalAlignment="Center"
                                               Margin="10,5"/>
                                </Grid>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter TargetName="bd" Property="Opacity" Value="0.5"/>
                                    </Trigger>
                                    <Trigger Property="IsSelected" Value="True">
                                        <Setter TargetName="bd" Property="Opacity" Value="0.6"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </TabControl.Resources>
            <TabItem Header="看剧透" Background="SpringGreen">
                <ScrollViewer HorizontalScrollBarVisibility="Auto"
                              VerticalScrollBarVisibility="Auto">
                    <StackPanel Orientation="Vertical" DataContext="{Binding Battle}"
                                d:DataContext="{d:DesignInstance officer:BattleManager}"
                                Visibility="{Binding InSortie, Converter={StaticResource VisibilityConverter}, ConverterParameter=True}">
                        <TextBlock>
                            出击海域：
                            <Run>
                                <Run.Text>
                                    <MultiBinding StringFormat="{}{0}-{1}">
                                        <Binding Path="CurrentMap.AreaNo" Mode="OneWay"/>
                                        <Binding Path="CurrentMap.No" Mode="OneWay"/>
                                    </MultiBinding>
                                </Run.Text>
                            </Run>
                            <LineBreak/>
                            <Run Text="{Binding CurrentMap.Name, Mode=OneWay}"/>
                            <Run Text="{Binding CurrentMap.OperationName, Mode=OneWay}"/>
                            <LineBreak/>
                            地点：
                            <Run Text="{Binding CurrentNode.Id, Mode=OneWay}"/>
                            <TextBlock>
                                <TextBlock.Style>
                                    <Style TargetType="{x:Type TextBlock}">
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding CurrentNode.Type}" Value="Battle">
                                                <Setter Property="Text" Value="战斗"/>
                                                <Setter Property="Foreground" Value="Red"/>
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding CurrentNode.Type}" Value="BOSS">
                                                <Setter Property="Text" Value="BOSS"/>
                                                <Setter Property="Foreground" Value="Red"/>
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding CurrentNode.Type}" Value="ItemGet">
                                                <Setter Property="Text" Value="资源获得"/>
                                                <Setter Property="Foreground" Value="SpringGreen"/>
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding CurrentNode.Type}" Value="ItemLost">
                                                <Setter Property="Text" Value="漩涡"/>
                                                <Setter Property="Foreground" Value="MediumPurple"/>
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding CurrentNode.Type}" Value="NightBattle">
                                                <Setter Property="Text" Value="夜战"/>
                                                <Setter Property="Foreground" Value="Red"/>
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding CurrentNode.Type}" Value="AirBattle">
                                                <Setter Property="Text" Value="航空战"/>
                                                <Setter Property="Foreground" Value="OrangeRed"/>
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding CurrentNode.Type}" Value="SelectRoute">
                                                <Setter Property="Text" Value="能动分歧"/>
                                                <Setter Property="Foreground" Value="Aquamarine"/>
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding CurrentNode.Type}" Value="Imagination">
                                                <Setter Property="Text" Value="错觉"/>
                                                <Setter Property="Foreground" Value="Aqua"/>
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding CurrentNode.Type}" Value="AirSearch">
                                                <Setter Property="Text" Value="航空侦察"/>
                                                <Setter Property="Foreground" Value="SpringGreen"/>
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding CurrentNode.Type}" Value="Guard">
                                                <Setter Property="Text" Value="船团护卫"/>
                                                <Setter Property="Foreground" Value="SpringGreen"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>
                        </TextBlock>
                    </StackPanel>
                </ScrollViewer>
            </TabItem>
            <TabItem Header="不看剧透" Background="Red"/>
        </TabControl>
    </Grid>
</UserControl>
