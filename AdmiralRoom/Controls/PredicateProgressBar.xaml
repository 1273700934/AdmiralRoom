<UserControl x:Class="Huoyaoyuan.AdmiralRoom.Controls.PredicateProgressBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Huoyaoyuan.AdmiralRoom.Controls"
             mc:Ignorable="d"
             x:Name="bar"
             d:DesignHeight="300" d:DesignWidth="300">
    <Canvas>
        <ProgressBar Width="{Binding Width, ElementName=bar}" Height="{Binding Height, ElementName=bar}"
                     Minimum="{Binding Minimum, ElementName=bar}"
                     Maximum="{Binding Maximum, ElementName=bar}"
                     Value="{Binding PredictValue, ElementName=bar}"
                     Foreground="{Binding PredictForeground, ElementName=bar}"
                     Background="{Binding Background, ElementName=bar}"/>
        <ProgressBar Width="{Binding Width, ElementName=bar}" Height="{Binding Height, ElementName=bar}" Background="Transparent"
                     Minimum="{Binding Minimum, ElementName=bar}"
                     Maximum="{Binding Maximum, ElementName=bar}"
                     Value="{Binding Value, ElementName=bar}"
                     Foreground="{Binding Foreground, ElementName=bar}"/>
    </Canvas>
</UserControl>
