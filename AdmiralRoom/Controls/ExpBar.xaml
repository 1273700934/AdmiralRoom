<UserControl x:Class="Huoyaoyuan.AdmiralRoom.Controls.ExpBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Huoyaoyuan.AdmiralRoom.Controls"
             mc:Ignorable="d" 
             x:Name="control">
    <UserControl.ToolTip>
        <TextBlock x:Name="ToolTipText"/>
    </UserControl.ToolTip>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="6"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal">
            <TextBlock FontSize="18">Lv.</TextBlock>
            <TextBlock FontSize="18" Text="{Binding Level, ElementName=control}"/>
        </StackPanel>
        <ProgressBar x:Name="BarExp" Grid.Row="1" Background="Transparent"/>
        <StackPanel Orientation="Horizontal" Grid.Row="2">
            <TextBlock FontSize="12">Next: </TextBlock>
            <TextBlock FontSize="12" Text="{Binding Exp.Next, ElementName=control}"/>
        </StackPanel>
    </Grid>
</UserControl>
